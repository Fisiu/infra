[Unit]
Description=Prometheus PVE Exporter
Documentation=https://github.com/znerol/prometheus-pve-exporter
After=network.target

[Service]
Type=simple
User={{ pve_exporter_user }}
Group={{ pve_exporter_group }}
ExecStart={{ pve_exporter_install_dir }}/venv/bin/pve_exporter --config.file {{ pve_exporter_config_dir }}/pve.yml --web.listen-address=:{{ pve_exporter_listen_port }}
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
