global:
  checkNewVersion: false
  sendAnonymousUsage: false

entryPoints:
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: :443
    http:
      middlewares:
        - error-pages@file

log:
  level: {{ traefik_log_level }}
  format: common
  filePath: /logs/traefik.log

accessLog:
  filePath: "/logs/access.log"

api:
  insecure: false
  dashboard: true

providers:
  docker:
    exposedByDefault: false
    network: {{ docker_network_name }}
  file:
    directory: /etc/traefik/dynamic
    watch: true

certificatesResolvers:
  staging:
    acme:
      email: {{ vault_lets_encrypt_email }}
      storage: /letsencrypt/acme.json
      caServer: "https://acme-staging-v02.api.letsencrypt.org/directory"
      dnsChallenge:
        provider: cloudflare
        propagation:
          delayBeforeChecks: "10"
          disableChecks: true
        resolvers:
          - "1.1.1.1:53" # Cloudflare DNS resolver
          - "8.8.8.8:53" # Google DNS resolver
  production:
    acme:
      email: {{ vault_lets_encrypt_email }}
      storage: /letsencrypt/acme.json
      caServer: "https://acme-v02.api.letsencrypt.org/directory"
      dnsChallenge:
        provider: cloudflare
        propagation:
          delayBeforeChecks: "10"
          disableChecks: true
        resolvers:
          - "173.245.58.245" # Cloudflare DNS resolver
          - "108.162.193.170" # Quad9 DNS resolver

serversTransport:
  insecureSkipVerify: true
