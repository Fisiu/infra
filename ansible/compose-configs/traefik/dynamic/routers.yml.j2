---
# routes.yml

http:
  routers:
    # dsm on ds224
    ds224:
      rule: "Host(`nas.{{ vault_traefik_domain }}`) || Host(`ds224.{{ vault_traefik_domain }}`)"
      service: ds224
      entryPoints:
        - websecure
      middlewares:
        - lan-only@file
      tls:
        certResolver: production
        domains:
